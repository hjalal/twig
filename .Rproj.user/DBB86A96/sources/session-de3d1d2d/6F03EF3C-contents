library(gmod)
mygmod <- gmod() +
  decisions("A","B") +
  states(names=c("Healthy","Dead"), 
         init_probs=c(1,0), 
         max_cycle_in_states=c(1,1)) + 
  event(name="die", 
        #condition=c(state!="Dead",decision=="A"), 
        scenarios=c("Yes","No"), 
        probs=c(pDie(cycle),Inf), 
        outcomes=c("Dead","curr_state"))

pDie <- function(state){
  if (state == "Healthy") 0.1 else 0
}

